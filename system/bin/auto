#!/system/bin/sh

# ----- Automatic Uninstaller -----
# (C) gacorpkjrtÂ°

deletes() {
settings delete secure multi_press_timeout
settings delete secure long_press_timeout
settings delete global block_untrusted_touches
sleep 10s
su -c reboot
}
DIR=/data/adb/modules/ngentouch_module

while true; do
if [[ -e "$DIR/remove" ]]; then
sleep 5s
su -lp 2000 -c "cmd notification post -S bigtext -t '[ðŸ””] NgenTouch INFO' 'Tag' 'Starting Uninstaller service...'" > /dev/null
sleep 10s
deletes > /dev/null
su -lp 2000 -c "cmd notification post -S bigtext -t '[ðŸ””] NgenTouch INFO' 'Tag' 'The module is succesfully uninstalled, Auto reboot in 10sec.'" > /dev/null
exit 0
fi
done
